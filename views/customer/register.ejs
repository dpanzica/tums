<form action="/customer" method="post" >
    <p>Username: <input type="text" name="username" required> </p>
  	<p>Password: <input type="password" name="password" required> </p>
	<p>First Name: <input type="text" name="firstname" required> </p>
  	<p>Last Name: <input type="text" name="lastname" required> </p>
  	<p>Email: <input type="text" name="email" required> </p>
  	<p>Phone: <input type="text" name="phone" required> </p>
  	<p>Address Line 1: <input type="text" name="address1" required> </p>
  	<p>Address Line 2: <input type="text" name="address2" required> </p>
  	<p>City: <input type="text" name="city" required> </p>
  	<p>State/Province: <input type="text" name="state" required> </p>
	<p>Postal Code: <input type="text" name="zip" required> </p>
	<p>Additional Comments: <textarea name="addlnotes" rows="10" cols="30">Any Special Notes</textarea> </p>
	<p>Points: <input type="number" name="rewardpoints" required> </p>
	<button type="submit">Register</button>
</form>
